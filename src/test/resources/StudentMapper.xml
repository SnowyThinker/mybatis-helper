<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.github.snowthinkder.mh.test.page.StudentMapper" >
  
  <select id="queryPageList" resultType="Student" >
    select * from student
  </select>
  
  <select id="queryTotalCount" resultType="java.lang.Long">
  	select count(*) from student
  </select>
  
  <update id="createTable" parameterType="java.lang.String">
	create table if not exists student
	(
	   id varchar(100) not null,
	   name varchar(255) not null,
	   passport_number varchar(255) not null,
	   primary key(id)
	)
	</update>
	
	<insert id="insert" parameterType="Student">
		insert into student values(#{id}, #{name}, #{passportNumber})
	</insert>
</mapper>